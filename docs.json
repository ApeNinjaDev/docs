  "anchors": [
    {
      "name": "Website",
      "icon": "globe",
      "url": "https://apeninja.co"
    },
    {
      "name": "Telegram",
      "icon": "telegram",
      "url": "https://t.me/apeninjaofficial"
    },
    {
      "name": "Discord",
      "icon": "discord",
      "url": "https://discord.gg/apeninja"
    },
    {
      "name": "Twitter",
      "icon": "twitter",
      "url": "https://twitter.com/apeninja"
    }
  ],
  "feedback": {
    "thumbsRating": true
  },
  "topbarCtaButton": {
    "name": "Launch App",
    "url": "https://app.apeninja.co"
  }
}