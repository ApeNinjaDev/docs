{
  "$schema": "https://mintlify.com/docs.schema.json",
  "name": "ApeNinja Docs",
  "theme": "mint",
  "colors": {
    "primary": "#FDBA74",
    "light": "#FFEDD5",
    "dark": "#EA580C"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "groups": [
      {
        "group": "Introduction",
        "pages": [
          "introduction",
          "why-apeninja",
          "features"
        ]
      },
      {
        "group": "Ecosystem",
        "pages": [
          "ecosystem/architecture",
          "ecosystem/security",
          "ecosystem/supported-chains",
          "ecosystem/contracts",
          "ecosystem/fees"
        ]
      },
      {
        "group": "Platform Guides",
        "pages": [
          "platform-guides/webapp",
          "platform-guides/extension",
          "platform-guides/telegram-bot",
          "platform-guides/twitter-bot",
          "platform-guides/sdk"
        ]
      },
      {
        "group": "API",
        "pages": [
          "api-reference/introduction",
          "api-reference/authentication"
        ]
      }
    ]
  },
  "openapi": "openapi/v1.yaml",
  "api": {
    "baseUrl": "https://api.apeninja.co",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "mode": "simple"
    }
